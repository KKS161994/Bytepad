<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:id="@+id/animateLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:animateLayoutChanges="false"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/ll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/img"
        android:layout_below="@+id/inside2" >

        <RelativeLayout
            android:id="@+id/inside"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true" 
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:weightSum="4" >

            <EditText
                android:textColorHint="#6599FF"
                android:id="@+id/edit_text"
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="Enter subject name or code" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/edit_text"
                android:background="@drawable/search3"
                android:onClick="clicked" />

        </RelativeLayout>

        <ListView
            android:id="@android:id/list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inside"
            android:animateLayoutChanges="true"
            android:visibility="gone" >
        </ListView>

        <ImageView
            android:layout_below="@+id/inside"
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/content"
            android:src="@drawable/notfound"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:visibility="gone"
        android:id="@+id/img"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/content"
        android:src="@drawable/footer" />

</RelativeLayout>